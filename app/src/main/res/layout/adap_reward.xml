<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="7dp"
        android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <co.jlabs.cersei_retailer.custom_components.MyImageView
            android:id="@+id/pic"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"/>
        <co.jlabs.cersei_retailer.custom_components.TextView_Appcolor
            android:id="@+id/staricon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="16sp"
            android:text="@string/rating"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:id="@+id/points"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="14dp"
            android:text="-250"/>
        <co.jlabs.cersei_retailer.custom_components.TextView_Black
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:textSize="22sp"
            android:text="@string/ico_next_ico"/>

    </LinearLayout>
    <TextView
        android:id="@+id/title"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginLeft="5dp"
        android:text="50% off on Ola Cabs"/>
    </LinearLayout>
</LinearLayout>
