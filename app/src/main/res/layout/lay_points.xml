<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF">

    <android.support.v4.view.ViewPager
        android:background="@color/white"
        android:id="@+id/pager"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <FrameLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/orange_dark"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginBottom="48dip"
            android:layout_height="match_parent">
            <co.jlabs.cersei_retailer.custom_components.TextView_White
                android:id="@+id/rating"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:textSize="23sp"
                android:gravity="center"
                android:text="@string/rating"/>
            <TextView
                android:id="@+id/points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:text="1250"/>
            <TextView
                android:id="@+id/totalbalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:text="Total Balance"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="96dip"
            android:layout_gravity="bottom"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/header_Text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:visibility="invisible"
                android:paddingLeft="10dp"
                >
                <TextView
                    android:id="@+id/to_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="21sp"
                    android:text="Total Balance"/>
                <TextView
                    android:id="@+id/to_points"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:textSize="17sp"
                    android:text="1250" />
                <TextView
                    android:id="@+id/to_rating"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="4dp"
                    android:textSize="40sp"
                    android:text="*" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">
                <co.jlabs.cersei_retailer.custom_components.PagerSlidingStripPoints
                    android:id="@+id/tabs"
                    app:pstsShouldExpand="true"
                    android:layout_width="match_parent"
                    android:layout_height="48dip"
                    android:textSize="14sp"
                    app:pstsDividerColor="#00000000"
                    app:pstsIndicatorColor="@color/orange"
                    app:pstsUnderlineColor="@color/grey"
                    app:pstsTabPaddingLeftRight="14dp"/>
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>
    <TextView
        android:id="@+id/info"
        android:layout_gravity="bottom"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:textColor="#FF0000"
        android:gravity="center"
        />
</FrameLayout>